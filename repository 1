	void gotoxy(int x, int y) {
		COORD coord;
		coord.X = x;
		coord.Y = y;
		SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), coord);
	}
	
	void dibujar(char plano[height][width], int x, int y, char symbol) {
		plano[y][x] = symbol;
	}
	
